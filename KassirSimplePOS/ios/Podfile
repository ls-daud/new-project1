# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'KassirSimplePOS' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :hermes_enabled => false
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Use default simulator architectures on Apple silicon
    installer.aggregate_targets.each do |aggregate_target|
      next unless aggregate_target.name == 'Pods-KassirSimplePOS'

      aggregate_target.xcconfigs.each_key do |config_name|
        xcconfig_path = aggregate_target.xcconfig_path(config_name)
        next unless File.exist?(xcconfig_path)

        contents = File.read(xcconfig_path)
        printer_lib = '-l"PrinterSDK"'
        printer_path = '"${PODS_ROOT}/../../node_modules/react-native-thermal-receipt-printer-image-qr/ios/PrinterSDK"'

        contents = contents.gsub(printer_lib, '').gsub(printer_path, '')

        base_flags = contents[/^OTHER_LDFLAGS = (.*)$/, 1]
        if base_flags
          base_flags = base_flags.gsub(/\s+/, ' ').strip
          contents = contents.gsub(/^OTHER_LDFLAGS = .*$/, "OTHER_LDFLAGS = #{base_flags}")
          unless contents.include?('OTHER_LDFLAGS[sdk=iphoneos*]')
            contents << "\nOTHER_LDFLAGS[sdk=iphoneos*] = #{base_flags} #{printer_lib}\n"
          end
        end

        base_paths = contents[/^LIBRARY_SEARCH_PATHS = (.*)$/, 1]
        if base_paths
          base_paths = base_paths.gsub(/\s+/, ' ').strip
          contents = contents.gsub(/^LIBRARY_SEARCH_PATHS = .*$/, "LIBRARY_SEARCH_PATHS = #{base_paths}")
          unless contents.include?('LIBRARY_SEARCH_PATHS[sdk=iphoneos*]')
            contents << "\nLIBRARY_SEARCH_PATHS[sdk=iphoneos*] = #{base_paths} #{printer_path}\n"
          end
        end

        File.write(xcconfig_path, contents)
      end
    end
  end
end
